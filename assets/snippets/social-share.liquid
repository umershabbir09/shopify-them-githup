{%- if template == 'product' -%}
<div class="like-icon">
  <a class="facebook" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" data-toggle="tooltip" data-placement="top" title="Share on Facebook" target="_blank"><i class="fa fa-facebook"></i>like</a>
  <a class="twitter" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" data-toggle="tooltip" data-placement="top" title="Share on Twitter" target="_blank"><i class="fa fa-twitter"></i>tweet</a>
  {% if product.featured_image or article.image  %}
  <a class="pinterest" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" data-toggle="tooltip" data-placement="top" title="Share on Pinterest" target="_blank"><i class="fa fa-pinterest"></i>save</a>
  {% endif %}
</div>
{%- endif -%}

{%- if template == 'article' or template == 'blog' -%}
<div class="blog-share-link ">
  <h6>Share:</h6>
  <div class="blog-social-icon">
    {% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
    {% capture shareTitle %}{{ article.title | url_param_escape }}{% endcapture %}
    <a class="facebook" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" data-toggle="tooltip" data-placement="top" title="Share on Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
    <a class="twitter" href="//twitter.com/share?text={{ shareTitle }}&amp;url={{ permalinkURL }};source=webclient" data-toggle="tooltip" data-placement="top" title="Share on Twitter" target="_blank"><i class="fa fa-twitter"></i></a>
    {% if product.featured_image or article.image  %}
    <a class="pinterest" href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media=http:{% if template contains 'product' %}{{ product | img_url: '1024x1024' }}{% else %}{{ article | img_url: '1024x1024' }}{% endif %}&amp;description={{ shareTitle }}" data-toggle="tooltip" data-placement="top" title="Share on Pinterest" target="_blank"><i class="fa fa-pinterest"></i></a>
    {% endif %}
  </div>
</div>
{%- endif -%}