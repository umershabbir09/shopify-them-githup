{%- if product.handle != blank -%}
<a class="action-wishlist tile-actions--btn flex wishlist-btn wishlist" href="javascript: void(0)" button-wishlist data-product-handle="{{ product.handle }}" data-toggle="tooltip" data-placement="top" title="{{ settings.wishlist_title }}">
  <span class="add-wishlist"><i class="pe-7s-like"></i> {{ settings.add_wishlit_title }}</span>
  <span class="loading-wishlist"><i class="pe-7s-like"></i> {{ settings.loading_wishlist }}</span>
  <span class="remove-wishlist"><i class="pe-7s-like"></i> {{ settings.remove_wishlit_title }}</span>
</a>
{%- endif -%}
<a class="go-to-wishlist" href="/pages/wishlist" data-toggle="tooltip" data-placement="top" title="{{ settings.wishlist_title }}"><i class="pe-7s-like"></i>{{ settings.go_to_wishlit_title }}</a>