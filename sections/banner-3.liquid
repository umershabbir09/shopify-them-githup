{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}

   <div class="rts-posters-section1 section-9 {{ bg_image_class }}" id="section-{{ section.id }}" {{ sections_bg_image }}>
        <div class="container">
            <div class="row">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'banner' -%}
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                    <a href="{{ block.settings.banner_url }}" class="product-box product-box-medium product-box-medium5">
                        <div class="contents">
              {%- if block.settings.banner_sub_title != '' -%}
                        <span class="pretitle">{{ block.settings.banner_sub_title }}</span>
              {%- endif -%}
              {%- if block.settings.banner_title != '' -%}
                        <h1 class="product-title">{{ block.settings.banner_title }}</h1>
              {%- endif -%}
              {%- if block.settings.banner_description != '' -%}
                        <div class="view-collections go-btn">{{ block.settings.banner_description }}</div>
              {%- endif -%}
                          </div>
                        <div class="product-thumb"><img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="{{ block.settings.banner_image.alt }}">
                        </div>
                    </a>
                </div>
              
      {%- when 'banner_2' -%}
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                    <a href="{{ block.settings.banner_url }}" class="product-box product-box-medium product-box-medium3">
                        <div class="contents">
              {%- if block.settings.banner_sub_title != '' -%}
                        <span class="pretitle">{{ block.settings.banner_sub_title }}</span>
              {%- endif -%}
              {%- if block.settings.banner_title != '' -%}
                        <h1 class="product-title">{{ block.settings.banner_title }}</h1>
              {%- endif -%}
              {%- if block.settings.banner_button_title != '' -%}
                        <div class="view-collections go-btn">{{ block.settings.banner_button_title }}</div>
              {%- endif -%}
                        </div>
                        <div class="product-thumb"><img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="{{ block.settings.banner_image.alt }}">
                        </div>
                    </a>
                </div>
              
      {%- endcase -%}
      {%- endfor -%}
            </div>
        </div>
    </div>

<style>
  
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'banner' -%}
  .rts-posters-section1.section-9 .container .product-box-medium5 {
  background: url({{ block.settings.banner_bg_image | img_url: 'master' }});
}
      {%- when 'banner_2' -%}
  .rts-posters-section1.section-9 .container .product-box-medium3 {
  background: url({{ block.settings.banner_bg_image | img_url: 'master' }});
}
      {%- endcase -%}
      {%- endfor -%}
  
</style>

    
