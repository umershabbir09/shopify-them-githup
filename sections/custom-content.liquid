{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}

<div class="custom-content {{ bg_image_class }}" id="section-{{ section.id }}" {{ sections_bg_image }}>
  <div class="container">
    {%- if section.settings.section_title != '' or section.settings.section_sub_title != '' -%}
    <div class="row">
      <div class="col-12">
        <!-- section title start -->
        <div class="section-title text-center">
          {%- if section.settings.section_title != '' -%}
          <h2 class="title">{{ section.settings.section_title }}</h2>
          {%- endif -%}
          {%- if section.settings.section_sub_title != '' -%}
          <p class="sub-title">{{ section.settings.section_sub_title }}</p>
          {%- endif -%}
        </div>
        <!-- section title start -->
      </div>
    </div>
    {%- endif -%}

    <div class="row custom-content-align">
      {% for block in section.blocks %}
      {% case block.type %}
      {% when 'rich_text' %}
      <div class="col-lg-{{ block.settings.content_column }} col-md-{{ block.settings.content_column_md }} col-xs-12" {{ block.shopify_attributes }}>
        <div class="rich-text">
          {{ block.settings.rich_text_handle }}
        </div>
      </div>
      {% when 'html_content' %}
      <div class="col-lg-{{ block.settings.content_column }} col-md-{{ block.settings.content_column_md }} col-xs-12" {{ block.shopify_attributes }}>
        <div class="html-content">
          {{ block.settings.html_content }}
        </div>
      </div>
      {%- if block.settings.html_content_css != '' -%}
      <style>
        {{ block.settings.html_content_css }}
      </style>
      {%- endif -%}
      {% when 'image_content' %}
      <div class="col-lg-{{ block.settings.content_column }} col-md-{{ block.settings.content_column_md }} col-xs-12" {{ block.shopify_attributes }}>
        <div class="image-content">
          {% if block.settings.image_content_image != blank and block.settings.image_content_image_url != blank %}
          <a href="{{ block.settings.image_content_image_url }}">
            <img src="{{ block.settings.image_content_image | img_url: 'master' }}" alt="{{ block.settings.image_content_image.alt }}">
          </a>
          {% elsif block.settings.image_content_image != blank %}
          <img src="{{ block.settings.image_content_image | img_url: 'master' }}" alt="{{ block.settings.image_content_image.alt }}">
          {% else %}
          {{ 'image' | placeholder_svg_tag: 'custom-svg-image' }}
          {% endif %}
        </div>
      </div>
      {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
