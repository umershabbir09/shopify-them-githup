 {%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}

   <div class="rts-brands-section {{ bg_image_class }}"  id="section-{{ section.id }}" data-section="BrandLogo_3" {{ sections_bg_image }}>
        <div class="container">
            <div class="recent-products-header section-header section-header2">
                <span class="section-pretitle mb--10">{{ section.settings.section_sub_title }}</span>
                <span class="section-title-2">{{ section.settings.section_title }}</span>
              {%- if section.settings.title_image_1 -%}
                <div class="section-line mb-0"><img src="{{ section.settings.title_image_1 | img_url: 'large' }}" alt="line"></div>
              {%- endif -%}
            </div>
            <div class="brands-section-inner">
                <div class="row justify-content-center align-items-center">
                                    {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when 'brand' -%}
                    <div class="col-lg-15 col-md-4 col-sm-6 col-xs-6 col-xxs-6">
                        <div class="brand-item">
                            <a href="{{ block.settings.brand_url }}" class="front">
                              <img src="{{ block.settings.brand_image | img_url: 'master' }}" alt="{{ block.settings.brand_image.alt }}">
                            </a>
                        </div>
                    </div>
          {%- endcase -%}
          {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
    
 
