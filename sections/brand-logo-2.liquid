{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}

    <!--================= Brand Section Start Here =================-->
    <div class="{%- if section.settings.brand_style == 'style_1' -%} rts-brands-section1 brand-bg3   {% elsif section.settings.brand_style == 'style_2' %} rts-brands-section2 brand-bg3    {% elsif section.settings.brand_style == 'style_3' %} rts-brands-section2 brand-bg3 brand-bg8 {% else %} rts-brands-section1 section9 brand-bg3 {% endif %} {{ bg_image_class }}"  id="section-{{ section.id }}" data-section="BrandLogo_2" {{ sections_bg_image }}>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="{%- if section.settings.brand_style == 'style_1' -%} {% elsif section.settings.brand_style == 'style_2' %} brands-section-inner   {% elsif section.settings.brand_style == 'style_3' %} brands-section-inner {% else %} {% endif %} ">
                    <div class="slider-div">
                        <div class="swiper rts-brandSlide1">
                            <div class="swiper-wrapper">
                                    {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when 'brand' -%}
                                <div class="swiper-slide">
            {%- if block.settings.brand_image -%}
            <a href="{{ block.settings.brand_url }}" class="lazyload-wraper-position brand-front">
              <img  class="lazyload " data-src="{{ block.settings.brand_image | img_url: 'master' }}" alt="{{ block.settings.brand_image.alt }}">
            </a>
            {%- else -%}
            <a href="{{ block.settings.brand_url }}" class="brand-front">
              <img  class="lazyload " data-src="https://via.placeholder.com/234x48" alt="{{ block.settings.brand_image.alt }}">
            </a>
            {%- endif -%}
                                </div>
          {%- endcase -%}
          {%- endfor -%}
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================= Brand Section End Here =================-->

