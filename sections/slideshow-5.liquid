 <div class="banner banner-1 banner-9 bg-image"  id="section-{{ section.id }}" data-section="SlideShow_4">
    <div class="container">
        <div class="banner-inner">
            <div class="row">
              
                <div class="col-xl-2 col-lg-3 gutter-1">
                    <div class="catagory-sidebar">
                        <div class="widget-bg">
            {%- if section.settings.catagory_title != '' -%}
                            <h2 class="widget-title">{{ section.settings.catagory_title }} <i class="rt-angle-down"></i></h2>
            {%- endif -%}
                            <nav>
                                <ul>
                                  
                                  {%- assign user_menu = section.settings.user_menu_handle -%}
                                  {%- for link in linklists[user_menu].links -%}
                                    <li><a href="{{ link.url }}">{{ link.title }} <i class="rt rt-arrow-right-long"></i></a></li>
                                  {%- endfor -%}
                                  
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
              
                <div class="col-xl-10 col-lg-9 col-md-12 col-sm-12 gutter-2">
                    <div class="slider-inner">
                        <div class="swiper rts-topSlide2">
                            <div class="swiper-wrapper">
                                    {%- for block in section.blocks -%}
          {%- case block.type -%}
    {%- when 'slide' -%}  
                                <div class="swiper-slide">
                                    <div class="banner-single">
                                        <div class="container header-container">
                                            <div class="single-inner">
                                                <div class="contents">
            {%- if block.settings.slide_sub_title != '' -%}
                                                    <p class="slider-subtitle">{{ block.settings.slide_sub_title }} </p>
            {%- endif -%}
            {%- if block.settings.slide_title != '' -%}
                                                    <h1 class="banner-heading">{{ block.settings.slide_title }}</h1>
            {%- endif -%}
            {%- if block.settings.slide_content != '' -%}
                                                    <p>{{ block.settings.slide_content }}</p>
            {%- endif -%}
            {%- if block.settings.slide_button_title != '' -%}
                                                    <a class="banner-btn" href="{{ block.settings.slide_button_url }}">{{ block.settings.slide_button_title }}</a>
            {%- endif -%}
                                                </div>
                                                <div class="slider-image"><img src="{{ block.settings.slide_image | img_url: 'master' }}" alt="{{ block.settings.slide_image.alt }}"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
          {%- endcase -%}
          {%- endfor -%}
                            </div>
                        </div>
                      
                        <div class="swiper-pag-2"> </div>
                      
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>

<style>
  .banner.banner-1.banner-9 {
  background: url({{ section.settings.bg_image | img_url: 'master' }});
}
</style>

