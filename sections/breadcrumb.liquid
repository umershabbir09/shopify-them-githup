{%- if section.settings.breadcrumb_banner_enable -%}
{%- render 'breadcrumb-banner' -%}
<style>
  /* Breadcurmb Banner */
  .breadcrumbs {
    background: {{ section.settings.breadcrumb_banner_bg }} {% if section.settings.breadcrumb_banner_image %}url("{{ section.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover{% endif %};
      padding-top: {{ section.settings.breadcrumb_padding_top }}px;
      padding-bottom: {{ section.settings.breadcrumb_padding_bottom }}px;
      }
  .overlay-bg::before {
    background: {{ section.settings.breadcrumb_banner_overlay_color }} none repeat scroll 0 0;
    opacity: {{ section.settings.breadcrumb_banner_opacity }};
  }
  .breadcrumbs-title {
    color: {{ section.settings.breadcurmb_title_color }};
  }
  .breadcrumb-wrap .breadcrumb .breadcrumb-item a {
    color: {{ section.settings.breadcurmb_page_title_color }};
  }
  .breadcrumb-wrap .breadcrumb .breadcrumb-item::before{
    color: {{ section.settings.breadcurmb_page_title_color }};
  }
  .breadcrumb li + li a + span:before {
    color: {{ section.settings.breadcurmb_page_title_color }};
  }
  .breadcrumb-list > li span {
    color: {{ section.settings.active_breadcurmb_page_title_color }};
  }
  @media (max-width: 767px) {
    .breadcrumbs {
      padding-top: {{ section.settings.breadcrumb_padding_top_xs }}px;
      padding-bottom: {{ section.settings.breadcrumb_padding_bottom_xs }}px;
    }
  }
  {%- for block in section.blocks -%}
  {%- case block.type -%}

  {%- when 'product_pages' -%} 
  {%- if block.settings.breadcrumb_banner_image and template == 'product' -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}
  
  {%- when 'collection_pages' -%}
  {%- if template == 'collection' -%}
  {%- if collection.image and block.settings.collection_image_enable -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ collection.image.src | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- elsif block.settings.breadcrumb_banner_image -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}
  {%- endif -%}
  
  {%- when 'collection_list' -%}
  {%- if block.settings.breadcrumb_banner_image and template == 'list-collections' -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}

  {%- when 'blogs' -%}
  {%- if block.settings.breadcrumb_banner_image and template == 'blog' -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}
  
  {%- when 'blog_posts' -%}
  {%- if block.settings.breadcrumb_banner_image and template == 'article' -%}
  .template-{{ template.name | handle }} .breadcrumbs{
    background: url("{{ block.settings.breadcrumb_banner_image | img_url: 'master' }}") no-repeat scroll center center / cover;
      }
  {%- endif -%}
  
  {%- when 'cart' -%}
