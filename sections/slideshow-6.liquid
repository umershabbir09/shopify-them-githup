 <div class="banner banner-2 bg-image-2"  id="section-{{ section.id }}" data-section="SlideShow_5">
            <div class="swiper rts-topSlide6">
                <div class="swiper-wrapper">
                                    {%- for block in section.blocks -%}
          {%- case block.type -%}
    {%- when 'slide' -%}  
                    <div class="swiper-slide">
                        <div class="banner-single">
                            <div class="container header-container">
                                <div class="single-inner">
                                    <div class="contents">
            {%- if block.settings.slide_title != '' -%}
                                        <h1 class="banner-heading">{{ block.settings.slide_title }}</h1>
            {%- endif -%}
            {%- if block.settings.slide_content != '' -%}
                                        <p>{{ block.settings.slide_content }}</p>
            {%- endif -%}
            {%- if block.settings.slide_button_title != '' -%}
                                        <a class="banner-btn" href="{{ block.settings.slide_button_url }}">{{ block.settings.slide_button_title }} <i class="rt-arrow-right-long"></i></a>
            {%- endif -%}
                                    </div>
                                    <div class="slider-image"><img src="{{ block.settings.slide_image | img_url: 'master' }}" alt="{{ block.settings.slide_image.alt }}"> </div>
                                </div>
                            </div>
                        </div>
                    </div>
          {%- endcase -%}
          {%- endfor -%}
                  
                </div>
              
   
                <div class="container slider-nav-container">
                    <div class="slider-navigation">
                        <div class="swiper-button-prev slider-btn prev"><i class="rt-arrow-left-long"></i></div>
                        <div class="swiper-button-next slider-btn next"><i class="rt-arrow-right-long"></i></div>
                    </div>
                </div>
              
            </div>
</div>
        
<style>
.banner.banner-2.bg-image-2 {
  background-image: url({{ section.settings.bg_image | img_url: 'master' }});
}
</style>
