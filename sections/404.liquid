<div class="theme-default-margin" id="section-{{ section.id }}">
  <div class="container">	
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="error-content text-center">
          {% if section.settings.opps_404 %}
          <img src="{{ section.settings.opps_404 | img_url: 'large' }}" alt="" />
          {% endif %}
          {% if section.settings.heading_404 !='' %}
          <h4>{{ section.settings.heading_404 }}</h4>
          {% endif %}
          {% if section.settings.sub_text_404 !='' %}
          <p>{{ section.settings.sub_text_404 }}</p>
          {% endif %}
          {% if section.settings.button_title !='' %}
          <a class="theme-default-button" href="{{ section.settings.button_url }}" data-text="{{ section.settings.ettings.button_title }}" ><i class="fa fa-long-arrow-left"></i>{{ section.settings.button_title }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{%- render 'section-style' -%}


