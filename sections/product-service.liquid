      {%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}

<div class="rts-product-features-section  {{ bg_image_class }}"  id="section-{{ section.id }}" {{ sections_bg_image }} >
        <div class="container">
            <div class="section-inner">
                <div class="row align-items-center">
          {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when 'service' -%}
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 text-center">
                        <div class="image">
                            <img src="{{ block.settings.service_image | img_url: 'large' }}" alt="{{ block.settings.service_image.alt }}">
                        </div>
                        <div class="content">
          {%- if block.settings.service_title != '' -%}
                            <h2 class="main-title">{{ block.settings.service_title }}</h2>        
            {%- endif -%}
          {%- if block.settings.service_description != '' -%}
                            <p class="description">{{ block.settings.service_description }}</p>        
            {%- endif -%}
                        </div>
                    </div>
          {%- endcase -%}
          {%- endfor -%}
                </div>
            </div>
        </div>
    </div>


   
