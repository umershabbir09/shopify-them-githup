{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
<section class="latest-blog-area {{ bg_image_class }}" id="section-{{ section.id }}" data-section="LatestBlog" {{ sections_bg_image }}>
  <div class="container">
    {%- if section.settings.section_title != '' or section.settings.section_sub_title != '' -%}
    <div class="row">
      <div class="col-12">
        <!-- section title start -->
        <div class="section-title text-center">
          {%- if section.settings.section_title != '' -%}
          <h2 class="title">{{ section.settings.section_title }}</h2>
          {%- endif -%}
          {%- if section.settings.section_sub_title != '' -%}
          <p class="sub-title">{{ section.settings.section_sub_title }}</p>
          {%- endif -%}
        </div>
        <!-- section title start -->
      </div>
    </div>
    {%- endif -%}
    <div class="row">
      <div class="col-12">
        {%- capture data_slick_activation -%}
        data-slick='{
        {%- if section.settings.autoplay_true -%}
        "autoplay": true,
        "autoplaySpeed": {{ section.settings.autoplay_speed }},
        {%- endif -%}
        "slidesToShow": {{ section.settings.blog_column }},
        "responsive":[
            {"breakpoint":992, "settings": {"slidesToShow": {{ section.settings.blog_column_md }}} },
            {"breakpoint":768, "settings": {"slidesToShow": {{ section.settings.blog_column_sm }}, "arrows": false, "dots": true} },
            {"breakpoint":480, "settings": {"slidesToShow": 1, "arrows": false, "dots": true} }
          ]
        }'
        {%- endcapture -%}
        <div class="blog-carousel-active slick-row-10 slick-arrow-style slick-dot-style slick-dot-style-2" {% if settings.rtl_enable %}dir="rtl"{% endif %} {{ data_slick_activation }}>
          {%- assign blog = blogs[section.settings.blog_handle] -%}
          {%- assign blog_limit = section.settings.blog_limit_handle -%}
          {%- for article in blog.articles limit: blog_limit -%}
          {%- render 'blog-grid-item', article: article -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

