{%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%} 

<div class="banner_fullwidth {{ bg_image_class }}" id="section-{{ section.id }}" {{ sections_bg_image }}>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="banner_full_content {{ section.settings.content_position }}">
          {%- if section.settings.banner_sub_title != '' -%}
          <h4>{{ section.settings.banner_sub_title }}</h4>
          {%- endif -%}
          {%- if section.settings.banner_title != '' -%}
          <h2>{{ section.settings.banner_title }}</h2>
          {%- endif -%}
          {%- if section.settings.banner_button_title != '' -%}
          <a class="btn btn-hero" href="{{ section.settings.banner_button_url }}">{{ section.settings.banner_button_title }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- render 'section-style' -%}
{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .banner_full_content h4 {
    color: {{ section.settings.subtitle_color }};
  }
  #section-{{ section.id }} .banner_full_content h2 {
    color: {{ section.settings.title_color }};
  }
  #section-{{ section.id }} .banner_full_content a {
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_bg_color }};
  }
  #section-{{ section.id }} .banner_full_content a:hover {
    color: {{ section.settings.button_text_hover_color }};
    background-color: {{ section.settings.button_bg_hover_color }};
  }
</style>
{%- endif -%}

