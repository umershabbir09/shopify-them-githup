   {%- capture bg_image_class -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}bg-img lazyload{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
{%- capture sections_bg_image -%}
{%- for block in section.blocks -%}{%- case block.type -%}{%- when 'section_background' -%}{%- if block.settings.section_bg_image -%}data-bgset="{%- render 'responsive-bg-image', image: block.settings.section_bg_image -%}"{%- endif -%}{%- endcase -%}{%- endfor -%}
{%- endcapture -%}
    
  
  <div class="rts-recent_products-section section-gap  {{ bg_image_class }}"  id="section-{{ section.id }}" {{ sections_bg_image }}  data-section="feature_collection_5">
        <div class="container">
            <div class="recent-products-header section-header section-header3">
                <span class="section-pretitle section-pretitle2 mb--15">{{ section.settings.section_sub_title }}</span>
                <span class="section-title-2 mb--5">{{ section.settings.section_title }}</span>
                <div class="section-line mb-0"><img src="{{ section.settings.title_image_1 | img_url: 'large' }}" alt="line"></div>
            </div>
            <div class="products-area products-area3">
                <div class="row justify-content-center">
        {%- assign featured_product = collections[section.settings.featured_product_handle] -%}
        {%- assign featured_product_limit = section.settings.featured_product_limit_handle -%}
        {%- if featured_product == empty -%}
                        {%- assign a = 1 -%}
          {%- for i in (1..featured_product_limit) -%}
          {%- assign product_item = "product-" | append: a  -%}
          {%- assign a = a | plus: 1 -%}
                    <div class="col-lg-15 col-md-4 col-sm-6">
                        <div class="product-item product-item2 element-item3">
                               {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
                            <div class="bottom-content">
                                <span class="product-catagory">Hand Craft</span>
                                <a href="#" class="product-name">Minimalist Beard Mug</a>
                                <div class="action-wrap">
                                    <span class="product-price">$31.00</span>
                                    <a href="#" class="addto-cart"><i class="fa fa-shopping-cart"></i> Add To
                                        Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
          {%- if a == 7 -%}
          {%- assign a = 1 -%}
          {%- endif -%}
          {%- endfor -%}
        {%- else -%}
                      {%- for product in featured_product.products limit: featured_product_limit -%}
                    <div class="col-lg-15 col-md-4 col-sm-6">
                       {%- render 'product-grid-item-9', product: product, collection: featured_product -%}
                    </div>
          {%- endfor -%}
        {%- endif -%}
                </div>
            </div>
          
          {%- if section.settings.banner_button_title != '' -%}
            <div class="d-flex justify-content-center">
                <a href="{{ section.settings.banner_button_url }}" class="all-products-link">{{ section.settings.banner_button_title }} <i class="fal fa-long-arrow-right ml--10"></i></a>
            </div>
          {%- endif -%}
        </div>
    </div>



    
{%- render 'section-style' -%}

